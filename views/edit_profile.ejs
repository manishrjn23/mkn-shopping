<div class="row justify-content-center">
  <h1>Edit Information</h1>
</div>
<%- include('partials/messages'); %>

<div class="row mt-5 justify-content-center">
  <form action="/users/edit_profile" method="POST" autocomplete="off">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Enter name"
        value='<%=user.name%>' 
      />
    <div class="form-group">
        <label for="delivery_address">Delivery Address</label>
        <textarea class="form-control" id="delivery_address" rows="3" name="delivery_address"><%=user.delivery_address%></textarea>
      </div>


      <div class="form-group">
      <label for="phone">Phone number:</label>
  <input type="tel" id="phone" name="phone" pattern="+91-[0-9]{5}-[0-9]{5}" value='<%= user.phone  %> ' name="phone">
  <small>Format: +91-12345-67890 (we deliver only in India)</small>
</div>

    <button type="submit" class="btn btn-primary">Confirm</button>
  </form>
</div>
