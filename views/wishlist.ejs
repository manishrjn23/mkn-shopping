<%- include('partials/navbar'); %>
<div class="container">
  <h1 class="mt-5">Wishlist</h1>
  <%- include('partials/messages'); %>
  <p class="lead mt-3">Hi <%= user.name %>! Here is your wishlist</p>

  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Product Name</th>
        <th scope="col">Price</th>
        <th>.</th>
      </tr>
    </thead>
    <tbody>
      <% var c=0; %> <% for(var i=0; i < products.length; i++) { %>
      <tr>
        <th></th>
        <td><%= products[i].name %></td>
        <td><%= products[i].price %></td>
        <td><form action="/wishlist/delete?deletedItem=<%=i%>" method="POST"><button class="btn btn-danger" type="submit" name='remove' onclick="removeItem(this)">X</button></form></td>
        <% c=c+products[i].price %>
      </tr>
      <% } %>
    </tbody>
  </table>
  <% if(products.length===0){ %>
  <p>No items to show.</p>
  <% } %>
  <div class="d-flex flex-row-reverse">
    <h3>Total price: &#x20B9;<%=c %></h3>
  </div>
  <div class="d-flex flex-row-reverse">
    <form action="/wishlist/addAllToCart" method="POST">
      <button type="submit" class="btn btn-warning">Add all to cart!</button>
    </form>
  </div>
</div>
